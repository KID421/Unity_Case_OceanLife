[{"strDataType":"text","strName":"中文名","strValue":"交叉笛鯛","strThumbnailUrl":null},{"strDataType":"text","strName":"學名","strValue":"Lutjanus decussatus","strThumbnailUrl":null},{"strDataType":"text","strName":"中英文科名","strValue":"笛鯛科 (Lutjanidae)","strThumbnailUrl":null},{"strDataType":"text","strName":"中文俗名","strValue":"赤筆仔","strThumbnailUrl":null},{"strDataType":"text","strName":"英文俗名","strValue":"Checkered seaperch, Checkered snapper","strThumbnailUrl":null},{"strDataType":"text","strName":"最大體長","strValue":"35 cm","strThumbnailUrl":null},{"strDataType":"text","strName":"臺灣分布","strValue":"西部、南部、綠島、東沙、南沙 ","strThumbnailUrl":null},{"strDataType":"text","strName":"世界分布","strValue":"印度至西太平洋","strThumbnailUrl":null},{"strDataType":"text","strName":"棲所生態","strValue":"棲息於珊瑚礁區，包括沿岸及近海外礁區，水深2-30公尺處。通常獨游或聚集成一小群巡游於礁體間。以魚類及甲殼類為食。","strThumbnailUrl":null},{"strDataType":"text","strName":"形態特徵","strValue":"體長橢圓形，背緣呈弧狀彎曲。兩眼間隔平坦。前鰓蓋缺刻不顯著。鰓耙數14-16。上下頜兩側具尖齒，外列齒較大；上頜前端具犬齒數顆；下頜前端則為排列疏鬆之圓錐狀齒；鋤骨齒帶三角形，其後方無突出部；腭骨亦具絨毛狀齒；舌面無齒。體被中大櫛鱗，頰部及鰓蓋具多列鱗；背鰭、臀鰭和尾鰭基部大部分亦被細鱗；側線上方的鱗片斜向後背緣排列，下方的鱗片則與體軸平行。背鰭軟硬鰭條部間無明顯深刻；臀鰭基底短而與背鰭軟條部相對；背鰭硬棘X，軟條13-14；臀鰭硬棘III，軟條8-9；胸鰭長，末端達臀鰭起點；尾鰭叉形。體一致為白色或偏淡紅色，體側上方有3條深褐色縱帶，並與數條橫帶交錯而呈棋盤狀；体側下方另有2條紅褐色縱帶；尾鰭基部另有一大黑斑。","strThumbnailUrl":null},{"strDataType":"video","strName":"交叉笛鯛","strValue":"http://oceanvideo.tapmovie.com/assets/enclosures/2103/f39f32f771d699dc89bb55b01a7c2b0c.mp4","strThumbnailUrl":"http://oceanvideo.tapmovie.com/assets/enclosures/2103/preview.jpg"},{"strDataType":"image","strName":"交叉笛鯛","strValue":"http://image.nmmba.gov.tw/upload/archive/3982/preview_20100614101144.jpg","strThumbnailUrl":"http://image.nmmba.gov.tw/upload/archive/3982/thumbnail_20100614101144.jpg"},{"strDataType":"image","strName":"交叉笛鯛 ","strValue":"http://image.nmmba.gov.tw/upload/archive/5930/preview_20130910162656.jpg","strThumbnailUrl":"http://image.nmmba.gov.tw/upload/archive/5930/thumbnail_20130910162656.jpg"},{"strDataType":"image","strName":"11331.\t交叉笛鯛 Lutjanus decussatus (Cuvier, 1828)","strValue":"http://image.nmmba.gov.tw/upload/archive/21922/preview_20160715135825.jpg","strThumbnailUrl":"http://image.nmmba.gov.tw/upload/archive/21922/thumbnail_20160715135825.jpg"}]