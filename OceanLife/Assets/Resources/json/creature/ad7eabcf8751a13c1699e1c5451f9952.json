[{"strDataType":"text","strName":"中文名","strValue":"火斑笛鯛","strThumbnailUrl":null},{"strDataType":"text","strName":"學名","strValue":"Lutjanus fulviflamma","strThumbnailUrl":null},{"strDataType":"text","strName":"中英文科名","strValue":" (Lutjanidae)","strThumbnailUrl":null},{"strDataType":"text","strName":"中文俗名","strValue":"紅雞仔、赤筆仔、黑點、烏點仔、海雞母、紅花仔、黃記仔","strThumbnailUrl":null},{"strDataType":"text","strName":"英文俗名","strValue":"Snapper, Blackspot snapper, Blackspot seaperch, Dory snapper, Black-spot snapper, Malabar thyrssa, Longspot snapper","strThumbnailUrl":null},{"strDataType":"text","strName":"最大體長","strValue":"35 cm ","strThumbnailUrl":null},{"strDataType":"text","strName":"臺灣分布","strValue":"西部、南部、北部、東北部、澎湖、小琉球、蘭嶼、綠島","strThumbnailUrl":null},{"strDataType":"text","strName":"世界分布","strValue":"印度至太平洋","strThumbnailUrl":null},{"strDataType":"text","strName":"棲所生態","strValue":"棲息於沿岸礁區，水深3-35公尺處，有時會與其它種笛鯛聚集成一大群巡遊於群礁間。幼魚有時可發現於紅樹林區、河口或河川下游。主要攝食魚類、蝦類及其它底棲甲殼類。","strThumbnailUrl":null},{"strDataType":"text","strName":"形態特徵","strValue":"體長橢圓形，背緣呈弧狀彎曲。兩眼間隔平坦。前鰓蓋缺刻不顯著。鰓耙數13-18。上下頜具細齒多列，外列齒稍擴大，上頜前端具2犬齒，內列齒絨毛狀；下頜具一列稀疏細尖齒，後方者稍擴大；鋤骨齒帶三角形，其後方具有突出部；腭骨亦具絨毛狀齒；舌面無齒。體被中大櫛鱗，頰部及鰓蓋具多列鱗；背鰭鰭條部及臀鰭基部具細鱗；頭背部前額區鱗列數4-5，且左右接近；側線上方的鱗片斜向後背緣排列，下方的鱗片則與體軸平行。背鰭軟硬鰭條部間無明顯深刻；臀鰭基底短而與背鰭軟條部相對；背鰭硬棘X，軟條13；臀鰭硬棘III，軟條8；胸鰭長，末端達臀鰭起點；尾鰭內凹。體側黃褐色至黃色，腹部銀紅至粉紅色；體側具6-7黃色縱帶；體側在背鰭軟條部的下方具一大黑斑，黑斑2/3為側線下方。各鰭黃色。與勒氏笛鯛(L. russellii)極為相似。","strThumbnailUrl":null},{"strDataType":"image","strName":"火斑笛鯛","strValue":"http://image.nmmba.gov.tw/upload/archive/9289/preview_20100719132946.jpg","strThumbnailUrl":"http://image.nmmba.gov.tw/upload/archive/9289/thumbnail_20100719132946.jpg"},{"strDataType":"image","strName":"火斑笛鯛","strValue":"http://image.nmmba.gov.tw/upload/archive/9290/preview_20100719133004.jpg","strThumbnailUrl":"http://image.nmmba.gov.tw/upload/archive/9290/thumbnail_20100719133004.jpg"},{"strDataType":"image","strName":"火斑笛鯛","strValue":"http://image.nmmba.gov.tw/upload/archive/10042/preview_20101101140319.jpg","strThumbnailUrl":"http://image.nmmba.gov.tw/upload/archive/10042/thumbnail_20101101140319.jpg"},{"strDataType":"image","strName":"火斑笛鯛 ","strValue":"http://image.nmmba.gov.tw/upload/archive/19426/preview_20150526144418.jpg","strThumbnailUrl":"http://image.nmmba.gov.tw/upload/archive/19426/thumbnail_20150526144418.jpg"},{"strDataType":"image","strName":"火斑笛鯛 ","strValue":"http://image.nmmba.gov.tw/upload/archive/19569/preview_20150609141723.jpg","strThumbnailUrl":"http://image.nmmba.gov.tw/upload/archive/19569/thumbnail_20150609141723.jpg"},{"strDataType":"image","strName":"火斑笛鯛 ","strValue":"http://image.nmmba.gov.tw/upload/archive/19570/preview_20150609141749.jpg","strThumbnailUrl":"http://image.nmmba.gov.tw/upload/archive/19570/thumbnail_20150609141749.jpg"},{"strDataType":"image","strName":"1335.\t火斑笛鯛 Lutjanus fulviflamma (Forsskål, 1775)","strValue":"http://image.nmmba.gov.tw/upload/archive/21926/preview_20160715135914.jpg","strThumbnailUrl":"http://image.nmmba.gov.tw/upload/archive/21926/thumbnail_20160715135914.jpg"},{"strDataType":"image","strName":"火斑笛鯛 ","strValue":"http://image.nmmba.gov.tw/upload/archive/22156/preview_20160808162641.jpg","strThumbnailUrl":"http://image.nmmba.gov.tw/upload/archive/22156/thumbnail_20160808162641.jpg"}]